<?xml version="1.0"?>

<robot name="aruco" xmlns:xacro="http://ros.org/wiki/xacro">

	<!-- Properties -->
	<xacro:property name="aruco_dict" value="${load_yaml('aruco.yaml')}"/>
	<xacro:property name="boat_type" value="${aruco_dict['boat_type']}"/>
	<xacro:property name="aruco_num" value="${aruco_dict['aruco_num']}"/>
	<xacro:property name="namespace" value="aruco"/>
	<xacro:property name="use_mesh_file" value="true"/>
	<xacro:property name="mesh_file" value="package://boat_landing/meshes/Boat/${boat_type}_boat.dae"/>
	<xacro:property name="aruco_mesh_file_1" value="package://boat_landing/meshes/Boat/arucos/aruco${aruco_num}.dae"/>
	<!--aruco4 doesn't work for some reason...-->
	<xacro:property name="body_width" value="0.505"/>
	<!--+++++++++++++++++++-->
	<xacro:property name="body_height" value="0.1"/>
	<!--+++++++++++++++++++-->
	<xacro:property name="body_inertia">
		<inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
	</xacro:property>

	<!-- *********************** GAZEBO ROBOT DEFINITION ******************* -->
	<!-- Define the base link, which represents the boat itself -->
	<link name="${namespace}/base_link">
		<inertial>
			<mass value="${aruco_dict['boat_mass']}"/>
			<origin xyz="0 0 0"/>
			<xacro:insert_block name="body_inertia"/>
		</inertial>
		<!-- <visual>
			<origin xyz="0 0 0.2" rpy="0 0 0"/>
			<geometry>
				<xacro:if value="${boat_type == 'patrol'}">
					<mesh filename="${mesh_file}" scale="0.55 0.55 0.55"/>
				</xacro:if>
				<xacro:if value="${boat_type == 'pontoon'}">
					<mesh filename="${mesh_file}" scale="1 1 1"/>
				</xacro:if>
			</geometry>
		</visual> -->

	</link>
	<!-- Define the aruco link, which is attached to the base link via a rigid joint -->
	<link name="${namespace}/aruco_link_1">
		<visual>
			<xacro:if value="${boat_type == 'patrol'}">
				<origin xyz="0.0 0 0.2" rpy="0 0 0"/>
			</xacro:if>
			<xacro:if value="${boat_type == 'pontoon'}">
				<origin xyz="1.75 0 0.225" rpy="0 0 0"/>
			</xacro:if>
			<geometry>
				<mesh filename="${aruco_mesh_file_1}" scale="1.0 1.0 1.0"/>
			</geometry>
		</visual>
		<collision>
			<xacro:if value="${boat_type == 'patrol'}">
				<origin xyz="3.5 0 -0.2" rpy="0 0 0"/>
			</xacro:if>
			<xacro:if value="${boat_type == 'pontoon'}">
				<origin xyz="1.75 0 0.225" rpy="0 0 0"/>
			</xacro:if>
			<geometry>
				<box size="2.0 2.0 0.2"/>
			</geometry>
		</collision>
	</link>
	<joint name="boat_to_aruco_1" type="fixed">
		<parent link="${namespace}/base_link"/>
		<child link="${namespace}/aruco_link_1"/>
	</joint>

	<gazebo reference="${namespace}/base_link">
		<material>Gazebo/$(arg color)</material>
	</gazebo>

	<!-- ************************* FORCES AND MOMENTS ********************** -->

	<xacro:include filename="$(find boat_landing)/boat_plugins/xacro/boat_forces_and_moments.xacro"/>
	<xacro:boat_controller namespace="${namespace}" command_topic="boat_command"/>

	<!-- ***************** SENSORS ******************* -->
	<!-- Ground Truth (Odometry plugin gets orientation info from gazebo and publishes it
  		on the ROS network (as /.../ground_truth/odometry)-->
	<xacro:include filename="$(find fcu_sim_plugins)/xacro/odometry_sensor.xacro"/>
	<xacro:ground_truth namespace="${namespace}" parent_link="${namespace}/base_link"/>

	<!-- Mount an IMU (not being used when you have odometry plugin)-->
	<xacro:include filename="$(find fcu_sim_plugins)/xacro/imu.xacro"/>
	<xacro:perfect_IMU namespace="${namespace}" parent_link="${namespace}/base_link" imu_topic="imu/data" update_rate="500"/>

	<!-- GPS -->
	<xacro:include filename="$(find fcu_sim_plugins)/xacro/GPS.xacro"/>
	<xacro:Venus_GPS namespace="${namespace}" parent_link="${namespace}/base_link" GPS_topic="gps/data" update_rate="20"/>

</robot>
